@page
@model LectureAttendance.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
    ViewBag.UserType = HttpContext.Session.GetString("Type");
}
<div class="a" style="height:600px">
    <div class="container-fluid">
        <form action="" id="loginForm" method="post">
            <h1 style="margin-bottom:5%;">Login</h1>
            
            @{
                if(Model.ErrorMessage is not null)
                {
                    <div><strong>@Model.ErrorMessage</strong></div>
                }
            }
            <label>Email</label>
            <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Enter Your Email...">
            <span asp-validation-for="@Model.Email"></span>
            <br />
            
            <label>Password</label>
            <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Enter Your Password...">
            <span asp-validation-for="@Model.Password"></span>
            <br />
            
            <button type="submit" class="btn" style="  display: inline-block;
                background-color: #172432;
                border: none;
                color: #ddd;
                padding: 10px 20px;
                border-radius: 5px;">
                    Login
            </button>
        </form>
    </div>
</div>
