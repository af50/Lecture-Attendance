@page
@model LectureAttendance.Pages.Control.Add.CourseModel
@{
    ViewBag.UserType = HttpContext.Session.GetString("Type");
}

<head>
    <title>Add</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="bootstrap-5.3.2-dist/bootstrap-5.3.2-dist/css/bootstrap.min.css">
</head>

<body>
    <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link">Add</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" asp-page="/Control/Update/U_Course">Update</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Control/Delete/D_Course">Delete</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


   <div class="a" style="height:600px">
    <div class="container-fluid">

        <form action="" id="loginForm" method="post">

            <h1 style="margin-bottom:5%;">Add A New Course</h1>

            @if (Model.errorMessage.Length > 0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@Model.errorMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (Model.successMessage.Length > 0)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <label>Course Code</label>
            <input type="text" class="form-control" asp-for="CourseID" placeholder="Enter Course Code Here">
            <span asp-validation-for="CourseID" class="text-danger"></span>

            <label>Course Name</label>
            <input type="text" class="form-control" asp-for="CourseName" placeholder="Enter Course Name Here">
            <span asp-validation-for="CourseName" class="text-danger"></span>
           
            <button type="submit" class="btn" style="  display: inline-block;
                    background-color: #172432;
                    border: none;
                    color: #ddd;
                    padding: 10px 20px;
                    border-radius: 5px;">
                    Add
            </button>
        </form>
    </div>
</div>

</body>
 