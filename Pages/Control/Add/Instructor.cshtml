@page
@model LectureAttendance.Pages.Control.Add.InstructorModel

<head>
    <title>Sign up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="bootstrap-5.3.2-dist/bootstrap-5.3.2-dist/css/bootstrap.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Add/Instructor">Add</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Update/Instructor">Update</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Delete/Instructor">Delete</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="a">
        <div class="container-fluid">

            <form action="" id="loginForm" method="post">

                <h1 style="margin-bottom:5%;">Add a new instrutor</h1>

                <br />

                @if (Model.errorMessage.Length > 0)
                {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>@Model.errorMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                }
                else if (Model.successMessage.Length > 0)
                {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>@Model.successMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                }

                <br />

                <label>University ID:</label>
                <input type="text" asp-for="Id" id="user1" class="form-control" placeholder="InstructorId">
                <span asp-validation-for="Id" class="text-danger"></span>
                <br />


                 <br />

                <label>Name:</label>
                <input type="text" asp-for="Name" id="user1" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>

                <br />

                <label>Enter the instructor department:</label>
                <input type="text" id="instructor1" asp-for="DepartInstructor" class="form-control" placeholder="Department">
                <span asp-validation-for="DepartInstructor" class="text-danger"></span>
                
                <br />

                <label>Email:</label>
                <input type="text" email="user1" asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
                
                <br />

                <label>Password:</label>
                <input type="password" password="pass1" asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
                
                <br />

                <label>Phone:</label>
                <input type="text" phone="user1" asp-for="Phone" class="form-control" placeholder="Phone">

                <br />

                <label>BirthDate:</label>
                <input type="date" phone="user1" asp-for="BirthDate" class="form-control">

                <br />

                <label>Gender:</label>
                <br />
                <input type="radio" value="Male" name="gender" asp-for="Gender"/>
                <label>Male</label>
                <input type="radio" value="Female" name="gender" asp-for="Gender" />
                <label>Female</label>

                <br />

                <button type="submit" class="btn" style="  display: inline-block;
                  background-color: #172432;
                  border: none;
                  color: #ddd;
                  padding: 10px 20px;
                  border-radius: 5px;" >
                    Add
                </button>
            </form>
        </div>
    </div>

</body>