<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LectureAttendance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style1.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" >Lecture Attendance</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (ViewBag.UserType != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Schedule</a>
                            </li>
                        }
                        @if (ViewBag.UserType == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Control
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                    <li><a class="dropdown-item" asp-page="/Control/Add/Student">Student</a></li>
                                    <li><a class="dropdown-item" asp-page="/Control/Add/Lecture">Lecture</a></li>
                                    <li><a class="dropdown-item" asp-page="/Control/Add/Course">Course</a></li>
                                    <li><a class="dropdown-item" asp-page="/Control/Add/Instructor">Instructor</a></li>
                                </ul>
                            </li>
                        }
                        @if (ViewBag.UserType == "Student")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Enrollment">Enrollment</a>
                            </li>
                        }
                        @if (ViewBag.UserType == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login/Index">Log in</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link">@ViewBag.UserEmail</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login/logout">Log out</a>
                            </li>
                        }
                    </ul> 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-bottom:0px">
        <div class="container">
            &copy; 2023 - LectureAttendance 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>